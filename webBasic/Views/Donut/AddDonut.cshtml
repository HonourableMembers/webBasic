@model webBasic.Models.DonutOrder

@{
    ViewData["Title"] = "AddDonut";
}

<h1>AddDonut</h1>

<h4>DonutOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDonut">
            <h2 style="color:red"> @ViewBag.Error</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderID" class="control-label"></label>
                <input asp-for="OrderID" class="form-control" />
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtyDonuts" class="control-label"></label>
                <input asp-for="QtyDonuts" class="form-control" />
                <span asp-validation-for="QtyDonuts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtyCoffee" class="control-label"></label>
                <input asp-for="QtyCoffee" class="form-control" />
                <span asp-validation-for="QtyCoffee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAllDonuts">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
